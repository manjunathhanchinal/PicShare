<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pic-Share Upload your  pics</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    </head>
<body>
    <div class="container">
        <h1 class="mb-3"> Upload Your Photo Here</h1>

        <% if (errors && errors.length > 0) { %>
            <div class="errors">
                <ul>
                    <% errors.forEach(error => { %>
                        <li><%= error.msg %></li>
                    <% }) %>
                </ul>
            </div>
        <% } %>


        <form action="/upload" method="POST" enctype="multipart/form-data">

            <div class="mb-3">
                <label for="photo" class="form-label">Image:</label>
                <input type="file" class="form-control" id="photo" name="photo" accept="image/*"   placeholder="Upload file" required>
              </div>

              <div class="mb-3">
                <label for="title">Title:</label>
            <input type="text" name="title" id="title">
              </div>

              <div class="mb-3">
                <label for="description">Description:</label>
                <input type="text" name="description" id="description">
              </div>
        
              <button type="submit" class="btn btn-outline-primary">Upload</button>
            </form>
        
            
      </div>


    <script href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js "></script> 
</body>
</html>